# =============================================================================
# QLNCKH Environment Configuration
# Copy this file to .env and update values for your environment
# =============================================================================

# -----------------------------------------------------------------------------
# Database (Required)
# -----------------------------------------------------------------------------
DATABASE_URL="postgresql://USER:PASSWORD@HOST:5432/DATABASE?schema=public"

# -----------------------------------------------------------------------------
# JWT Configuration (Required)
# -----------------------------------------------------------------------------
# Generate secrets with: openssl rand -base64 32
JWT_ACCESS_SECRET="your-access-secret-min-32-chars"
JWT_REFRESH_SECRET="your-refresh-secret-min-32-chars"
JWT_ACCESS_EXPIRATION="15m"
JWT_REFRESH_EXPIRATION="7d"

# -----------------------------------------------------------------------------
# Cookie Configuration
# -----------------------------------------------------------------------------
# Set COOKIE_SECURE=true in production with HTTPS
COOKIE_SECURE=false
COOKIE_DOMAIN=localhost
COOKIE_SAME_SITE=lax

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
NODE_ENV=production
PORT=3000

# Demo mode (set to true for demo/testing)
DEMO_MODE=false
APP_MODE=production

# -----------------------------------------------------------------------------
# Form Engine Service (Optional)
# -----------------------------------------------------------------------------
FORM_ENGINE_URL=http://form-engine:8000

# -----------------------------------------------------------------------------
# Email Configuration (Optional - for notifications)
# -----------------------------------------------------------------------------
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-email@example.com
# SMTP_PASSWORD=your-email-password
# SMTP_FROM="QLNCKH <noreply@example.com>"

# -----------------------------------------------------------------------------
# File Upload
# -----------------------------------------------------------------------------
UPLOAD_DIR=/app/uploads
MAX_FILE_SIZE=10485760
