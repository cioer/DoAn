{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../dist/out-tsc",
    "module": "commonjs",
    "types": ["node", "vitest/globals"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2021",
    "moduleResolution": "node"
  },
  "include": ["src/**/*.spec.ts", "src/**/*.test.ts", "src/test-setup.ts"],
  "exclude": ["node_modules", "dist"]
}
