{
  "name": "web-apps",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "web-apps/src",
  "projectType": "application",
  "tags": [],
  "// targets": "to see all targets run: nx show project web-apps --web",
  "targets": {
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vitest run --configFile=vitest.config.ts --root=web-apps",
        "cwd": ".."
      },
      "configurations": {
        "watch": {
          "command": "vitest --configFile=vitest.config.ts --root=web-apps"
        },
        "coverage": {
          "command": "vitest run --coverage --configFile=vitest.config.ts --root=web-apps"
        }
      }
    }
  }
}
